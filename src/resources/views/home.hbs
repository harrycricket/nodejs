<div class='mt-4 mb-5'>
    <div class='row'>
        {{#each courses}}
            <div class='col-sm-6 col-md-4 col-lg-3'>
                <div class='card mb-4'>
                    <img src={{this.image}} class='card-img-top' alt='course image' />
                    <div class='card-body'>
                        <h5 class='card-title'>{{this.name}}</h5>
                        <p class='card-text'> {{this.description}}</p>
                        <a href='' class='card-link p-2'>View details</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>